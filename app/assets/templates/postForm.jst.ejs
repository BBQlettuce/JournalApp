<form class="edit-form">
  <label for='post_title'>Title:</label>
  <input type='text' id='post_title' name='post[title]' value="<%= post.get('title') %>">
  <br>

  <label for='post_body'>Body:</label>
  <textarea id='post_body' name='post[body]'><%= post.get('body') %></textarea>
  <br>

  <button>Submit</button>
</form>
